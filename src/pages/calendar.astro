---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const evenimente = await getCollection('evenimente');
const sortedEvenimente = evenimente.sort((a, b) =>
  a.data.date.getTime() - b.data.date.getTime()
);

const now = new Date();
const viitoare = sortedEvenimente.filter(e => e.data.date >= now);
const trecute = sortedEvenimente.filter(e => e.data.date < now).reverse();

// Function to generate Google Calendar URL
function generateGoogleCalendarUrl(event: any) {
  const startDate = event.data.date.toISOString().replace(/[-:]/g, '').split('.')[0];
  const endDate = (event.data.endDate || event.data.date).toISOString().replace(/[-:]/g, '').split('.')[0];
  const title = encodeURIComponent(event.data.title);
  const details = encodeURIComponent(event.data.description || '');
  const location = encodeURIComponent(event.data.location);

  return `https://calendar.google.com/calendar/u/0/r/eventedit?text=${title}&dates=${startDate}/${endDate}&location=${location}&details=${details}`;
}
